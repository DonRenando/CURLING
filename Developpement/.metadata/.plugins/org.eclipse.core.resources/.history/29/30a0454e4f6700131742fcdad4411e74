import java.io.File;
import java.io.IOException;

import java.util.Scanner;


	public class TestRegex {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
		Scanner monScanner = new Scanner(new File("test.txt"));
		String expression = "\\b(http)://[-A-Z0-9+&@#/%?=~_|!:,.;]*[-A-Z0-9+&@#/%=~_|]";
		String regex = "\\b(https?|ftp|file)://[-a-zA-Z0-9+&@#/%?=~_|!:,.;]*[-a-zA-Z0-9+&@#/%=~_|]";
		
		pattern = Pattern.compile("[A-Za-z0-9](([_\\.\\-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([\\.\\-]?[a-zA-Z0-9]+)*)\\.([A-Za-z]{2,})", Pattern.CASE_INSENSITIVE);
		
		
		System.out.println(monScanner.findInLine(regex));
		
		while (monScanner.hasNext(expression))
			System.out.println(monScanner.findInLine(expression));
					
		} catch(IOException ignore){}
	}

}
