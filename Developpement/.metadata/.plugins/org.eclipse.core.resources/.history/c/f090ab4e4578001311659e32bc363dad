package controleur;

import vue.*;

public class CtrlAccueil {
	
	
	/**
	 * Permet de creer une nouvelle boite de dialogue, DlgAccueil<BR>
	 * @return		retourne la boite de dialgue DlgAccueil avec son Controleur en paramètre
	 */
	public DlgAccueil newDlgAccueil(){
		return (new DlgAccueil(this)); 
	}
	
	
	
	/**
	 * Permet d'afficher la liste des url defectueux en creant un nouveau controlleur. 
	 * Ce nouveau controlleur s'occupe lui même de creer la boite de dialogue DlgListe<BR>
	 * @param		pChemin			Le nom du fichier
	 */
	public void afficherListe(String pChemin){
		// On crée la nouvelle fenêtre par l'intermédiaire de CtrlListe;
		CtrlListe newCtrl= new CtrlListe(pChemin);
		newCtrl.newDlgListe();
	}
	

}
