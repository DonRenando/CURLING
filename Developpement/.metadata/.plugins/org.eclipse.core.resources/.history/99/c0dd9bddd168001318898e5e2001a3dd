package Test;

import java.net.URL;
import java.net.HttpURLConnection;
import java.io.IOException;

public class testUrl {

	
	public boolean estDefectueux(String pUrlString) {
		int result=this.getResponseCode(pUrlString);
		if (result >= 400)
			return true;
		return false;
	}


	private int getResponseCode(String urlString) {
		try {
	    URL u = new URL(urlString); 
	    HttpURLConnection huc =  (HttpURLConnection)  u.openConnection(); 
	    huc.setRequestMethod("GET"); 
	    huc.connect(); 
	    return huc.getResponseCode();
		} catch (IOException ignore){return 404;}

	}
	
	
	public static void main(String[] args) {
		testUrl f=new testUrl();

		System.out.println(f.estDefectueux("http://wims.auto.u-psud.fr/wims/wims.cgi?lang=fr&module=adm/class/classes&type=authparticipant&class=4029531&subclass=yes"));
		System.out.println(f.estDefectueux("https://www.modelica.org/"));


	}
}
